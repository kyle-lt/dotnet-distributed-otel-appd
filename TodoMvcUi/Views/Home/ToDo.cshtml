@{
    ViewData["Title"] = "ToDo";
}

@model IEnumerable<TodoMvcUi.Models.TodoItem>

<div class="text-center">
    <h2>Here are the ToDoItems as a JSON String:</h2>
    <p>@ViewData["TodoItems"]</p>
    <br/>

    <h2>Let's put them in a table!</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsComplete)
            </th>
            <th>
                Delete
            </th>            
            <th></th>
        </tr>
        @foreach (var item in Model) 
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsComplete)
                </td>
                <td>
                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id">/Home/Delete/@item.Id</a>
                </td>                
            </tr>
        }
    </table>
    <br/>
    <h2>Want more data? Add some here!</h2>
    <form method="post" action="/Home/ToDoPost">  
        <label>Name:</label>  
        <input type="text" id="txtName" name="name" />  
        <br/>
        <label>Completed?</label>  
        <input type="checkbox" id="boolIsComplete" value="true" name="isComplete" />  
        <br/>
        <button type="submit">Submit</button>
</form>

</div>